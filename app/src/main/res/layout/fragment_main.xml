<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_launcher_round"/>
                <Button
                        android:id="@+id/transform_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="검색"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:background="@drawable/item_maintransform"
                        android:layout_margin="4dp"
                        android:textSize="16sp"/>
            </RelativeLayout>

            <com.ensharp.seoul.seoultheplace.UIElement.HorizontalListView
                    android:id="@+id/tagListView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.ensharp.seoul.seoultheplace.UIElement.HorizontalListView>

            <LinearLayout
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone">
                <EditText
                        android:id="@+id/search_edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="4"/>
                <ImageButton
                        android:id="@+id/search_button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:background="@color/white"
                        android:src="@drawable/search_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="3.3"
                android:orientation="vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="12dp"
                android:id="@+id/recent_search"
                android:visibility="gone"
                android:background="#00000000">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="20sp"
                    android:text="최근 검색"/>
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/recent_listview"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="3.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

            <android.support.v4.view.ViewPager
                    android:id="@+id/course_search_result"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingBottom="12dp"
                    android:paddingEnd="@dimen/card_padding"
                    android:paddingLeft="@dimen/card_padding"
                    android:paddingRight="@dimen/card_padding"
                    android:paddingStart="@dimen/card_padding"/>

            <android.support.v4.view.ViewPager
                    android:id="@+id/place_search_result"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingBottom="12dp"
                    android:paddingEnd="@dimen/card_padding"
                    android:paddingLeft="@dimen/card_padding"
                    android:paddingRight="@dimen/card_padding"
                    android:paddingStart="@dimen/card_padding"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>