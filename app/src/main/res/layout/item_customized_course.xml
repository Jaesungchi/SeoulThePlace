<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF4C4D"
        android:orientation="horizontal"
        android:gravity="center"
        android:tag="Bottom3">

        <ImageView
            android:id="@+id/trash"
            android:layout_gravity="left|center"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:src="@drawable/trash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="7dp"
            android:text="삭제하시겠습니까?"
            android:fontFamily="@font/font_family"
            android:textColor="#fff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/delete"
            android:layout_gravity="right|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/white"
            android:text="삭제"
            android:fontFamily="@font/font_family"
            android:textColor="#FF4C4D"
            android:textSize="17sp"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/customized_course_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="20dp"
        android:stateListAnimator="@anim/lift_on_touch"
        app:cardElevation="30dp">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/boxbox"
            android:clickable="false"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_unchoicedtag"
            android:gravity="top"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/customized_course_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@color/non_active_dot"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/customized_course_name"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/font_family"
                    android:text="서촌, 감성을 깨우다"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/customized_course_location"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/font_family"
                android:padding="2dp"
                android:singleLine="true"
                android:text="서울특별시 종로구 청운효자동"
                android:textColor="#77000000"
                android:textSize="13sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.daimajia.swipe.SwipeLayout>
